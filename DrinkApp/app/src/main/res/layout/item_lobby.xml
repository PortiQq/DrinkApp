<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Lobby Name and Delete Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/text_lobby_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Imprezka"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Imprezka" />

            <ImageButton
                android:id="@+id/button_delete_lobby"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete lobby"
                android:scaleType="centerInside"
                app:tint="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Info Row: Drink Type and People Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Drink Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸº"
                    android:textSize="16sp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/text_drink_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beer"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    tools:text="Beer" />

            </LinearLayout>

            <!-- People Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥"
                    android:textSize="16sp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/text_people_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 people"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    tools:text="3 people" />

            </LinearLayout>

        </LinearLayout>

        <!-- Timer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/gradient_background"
            android:padding="12dp">

            <!-- Timer Icon and Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_timer_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±ï¸"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_timer_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next drink in"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        tools:text="Next drink in" />

                    <TextView
                        android:id="@+id/text_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05:42"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark"
                        tools:text="05:42" />

                </LinearLayout>

            </LinearLayout>

            <!-- Status Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/view_status_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/gradient_background" />

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    tools:text="Active" />

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Bar (Optional - for visual timer representation) -->
        <ProgressBar
            android:id="@+id/progress_bar_timer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:progress="65"
            android:progressTint="@color/primary"
            android:progressBackgroundTint="#E0E0E0"
            tools:progress="65" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>